---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "AI-native technology company building intelligent platforms across multiple domains." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico" sizes="16x16 32x32 48x48 64x64 128x128" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://www.machinekinglabs.com/images/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Machine King Labs - AI-native technology company" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:url" content={`https://www.machinekinglabs.com${Astro.url.pathname}`} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://www.machinekinglabs.com/images/og-image.png" />
    <meta name="twitter:image:alt" content="Machine King Labs - AI-native technology company" />

    <title>{title}</title>

    <!-- Google Analytics (GA4) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-3FXH9ZDDT5"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-3FXH9ZDDT5');
    </script>
  </head>
  <body class="bg-black text-white antialiased">
    <!-- Navigation - Modern Enterprise -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-black/95 backdrop-blur-2xl border-b border-zinc-800/50">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-3 group">
            <div class="relative">
              <img src="/images/machine-king-labs-logo.png" alt="Machine King Labs" class="h-11 w-11 opacity-90 group-hover:opacity-100 transition-opacity" />
            </div>
            <span class="font-bold text-xl tracking-tight leading-none">Machine King Labs</span>
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden lg:flex items-center gap-1">
            <a href="/" class="px-4 py-2 text-sm font-medium text-zinc-300 hover:text-white hover:bg-zinc-900/50 rounded-md transition-all">Home</a>
            <a href="/about" class="px-4 py-2 text-sm font-medium text-zinc-300 hover:text-white hover:bg-zinc-900/50 rounded-md transition-all">About</a>
            <a href="/projects" class="px-4 py-2 text-sm font-medium text-zinc-300 hover:text-white hover:bg-zinc-900/50 rounded-md transition-all">Portfolio</a>
            <a href="/innovation-lab" class="px-4 py-2 text-sm font-medium text-zinc-300 hover:text-white hover:bg-zinc-900/50 rounded-md transition-all">Innovation Lab</a>
            <a href="/team" class="px-4 py-2 text-sm font-medium text-zinc-300 hover:text-white hover:bg-zinc-900/50 rounded-md transition-all">Team</a>
            <a href="/contact" class="px-4 py-2 text-sm font-medium text-zinc-300 hover:text-white hover:bg-zinc-900/50 rounded-md transition-all">Contact</a>
          </div>

          <!-- Mobile menu button -->
          <button class="lg:hidden p-2 rounded-md hover:bg-zinc-900/50 transition-all" id="mobile-menu-btn" aria-label="Toggle menu">
            <svg class="w-6 h-6 transition-transform" id="menu-icon-open" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg class="w-6 h-6 hidden transition-transform" id="menu-icon-close" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile menu -->
      <div class="lg:hidden hidden" id="mobile-menu">
        <div class="px-4 pt-2 pb-4 space-y-1 bg-zinc-950 border-t border-zinc-800/50">
          <a href="/" class="block px-4 py-3 text-sm font-medium text-zinc-300 hover:text-white hover:bg-zinc-900/50 rounded-md transition-all">Home</a>
          <a href="/about" class="block px-4 py-3 text-sm font-medium text-zinc-300 hover:text-white hover:bg-zinc-900/50 rounded-md transition-all">About</a>
          <a href="/projects" class="block px-4 py-3 text-sm font-medium text-zinc-300 hover:text-white hover:bg-zinc-900/50 rounded-md transition-all">Portfolio</a>
          <a href="/innovation-lab" class="block px-4 py-3 text-sm font-medium text-zinc-300 hover:text-white hover:bg-zinc-900/50 rounded-md transition-all">Innovation Lab</a>
          <a href="/team" class="block px-4 py-3 text-sm font-medium text-zinc-300 hover:text-white hover:bg-zinc-900/50 rounded-md transition-all">Team</a>
          <a href="/contact" class="block px-4 py-3 text-sm font-semibold bg-white text-black hover:bg-zinc-200 rounded-md transition-all text-center">Contact</a>
        </div>
      </div>
    </nav>

    <main class="pt-20">
      <slot />
    </main>

    <!-- Footer - Enterprise Minimal -->
    <footer class="bg-zinc-950 border-t border-zinc-800/50 mt-20">
      <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12 py-16">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10 lg:gap-12">
          <!-- Company Info -->
          <div class="lg:col-span-1">
            <div class="flex items-center gap-3 mb-4">
              <img src="/images/machine-king-labs-logo.png" alt="Machine King Labs" class="h-8 w-8 opacity-90" />
              <h3 class="font-bold text-sm uppercase tracking-wider text-white">Machine King Labs</h3>
            </div>
            <p class="text-zinc-400 text-sm leading-relaxed">AI-native technology company building intelligent platforms across multiple domains.</p>
            <p class="text-zinc-500 mt-3 text-xs">Fairfax, Virginia</p>
          </div>

          <!-- Quick Links -->
          <div>
            <h3 class="font-bold text-sm mb-4 uppercase tracking-wider text-white">Navigation</h3>
            <ul class="space-y-2.5">
              <li><a href="/" class="text-zinc-400 hover:text-white transition-colors text-sm">Home</a></li>
              <li><a href="/about" class="text-zinc-400 hover:text-white transition-colors text-sm">About</a></li>
              <li><a href="/projects" class="text-zinc-400 hover:text-white transition-colors text-sm">Portfolio</a></li>
              <li><a href="/innovation-lab" class="text-zinc-400 hover:text-white transition-colors text-sm">Innovation Lab</a></li>
            </ul>
          </div>

          <!-- Team -->
          <div>
            <h3 class="font-bold text-sm mb-4 uppercase tracking-wider text-white">Team</h3>
            <ul class="space-y-2.5">
              <li><a href="/team" class="text-zinc-400 hover:text-white transition-colors text-sm">Our Team</a></li>
              <li><a href="/portal" class="text-zinc-400 hover:text-white transition-colors text-sm">Team Portal</a></li>
              <li><a href="/contact" class="text-zinc-400 hover:text-white transition-colors text-sm">Contact</a></li>
            </ul>
          </div>

          <!-- Contact -->
          <div>
            <h3 class="font-bold text-sm mb-4 uppercase tracking-wider text-white">Contact</h3>
            <div class="space-y-2.5">
              <a href="mailto:robertsmith@machinekinglabs.com" class="text-zinc-400 hover:text-white transition-colors text-sm block">robertsmith@machinekinglabs.com</a>
              <a href="https://github.com/taskmasterpeace/machinekinglabs" target="_blank" rel="noopener noreferrer" class="text-zinc-400 hover:text-white transition-colors text-sm block">GitHub</a>
            </div>
          </div>
        </div>

        <!-- Bottom Bar -->
        <div class="border-t border-zinc-800/50 mt-12 pt-8">
          <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
            <p class="text-zinc-500 text-xs uppercase tracking-wider">&copy; {new Date().getFullYear()} Machine King Labs, LLC. All rights reserved.</p>
            <p class="text-zinc-600 text-xs">Built with precision and intelligence</p>
          </div>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const mobileMenuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      const menuIconOpen = document.getElementById('menu-icon-open');
      const menuIconClose = document.getElementById('menu-icon-close');

      // Toggle menu on button click
      mobileMenuBtn?.addEventListener('click', () => {
        const isHidden = mobileMenu?.classList.toggle('hidden');

        // Toggle icons
        menuIconOpen?.classList.toggle('hidden');
        menuIconClose?.classList.toggle('hidden');

        // Add active state to button
        if (!isHidden) {
          mobileMenuBtn?.classList.add('bg-zinc-900');
        } else {
          mobileMenuBtn?.classList.remove('bg-zinc-900');
        }
      });

      // Helper function to close menu and reset icons
      function closeMenu() {
        mobileMenu?.classList.add('hidden');
        menuIconOpen?.classList.remove('hidden');
        menuIconClose?.classList.add('hidden');
        mobileMenuBtn?.classList.remove('bg-zinc-900');
      }

      // Close menu when clicking a link
      const mobileLinks = mobileMenu?.querySelectorAll('a');
      mobileLinks?.forEach(link => {
        link.addEventListener('click', () => {
          closeMenu();
        });
      });

      // Close menu on Escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && mobileMenu && !mobileMenu.classList.contains('hidden')) {
          closeMenu();
        }
      });

      // Close menu when clicking outside
      document.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        if (mobileMenu && mobileMenuBtn &&
            !mobileMenu.contains(target) &&
            !mobileMenuBtn.contains(target) &&
            !mobileMenu.classList.contains('hidden')) {
          closeMenu();
        }
      });
    </script>
  </body>
</html>
