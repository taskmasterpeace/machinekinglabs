---
import Layout from '../layouts/Layout.astro';
import { Mail, Calendar, MapPin } from 'lucide-astro';
---

<Layout title="Contact | Machine King Labs" description="Get in touch with Machine King Labs for investment inquiries, partnership opportunities, or general questions.">
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-zinc-950 via-neutral-950 to-black">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="page-title text-5xl md:text-6xl font-bold mb-6">
        <span class="gradient-text">Get in Touch</span>
      </h1>
      <p class="text-xl text-zinc-300 max-w-3xl mx-auto">
        Let's discuss investment opportunities, partnerships, or collaboration
      </p>
    </div>
  </section>

  <!-- Contact Methods Section -->
  <section class="py-20">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">

        <!-- Email Card -->
        <div class="contact-card bg-zinc-950 rounded-sm p-8 border border-zinc-800 hover:border-zinc-600 transition-all">
          <div class="mb-4">
            <Mail class="w-12 h-12 text-zinc-400" />
          </div>
          <h3 class="text-2xl font-bold mb-4 text-white">Email Us</h3>
          <p class="text-zinc-400 mb-4">
            Reach out directly to our founder for investment inquiries or partnership opportunities.
          </p>
          <a href="mailto:robert@machinekinglabs.com" class="text-white hover:text-zinc-300 font-semibold text-lg">
            robert@machinekinglabs.com
          </a>
        </div>

        <!-- Schedule Meeting Card -->
        <div class="contact-card bg-zinc-950 rounded-sm p-8 border border-zinc-800 hover:border-zinc-600 transition-all">
          <div class="mb-4">
            <Calendar class="w-12 h-12 text-zinc-400" />
          </div>
          <h3 class="text-2xl font-bold mb-4 text-white">Schedule a Meeting</h3>
          <p class="text-zinc-400 mb-4">
            Book a time on our calendar for a detailed discussion about our projects and opportunities.
          </p>
          <a
            href="https://calendly.com/robert-machinekinglabs"
            target="_blank"
            rel="noopener"
            class="inline-block px-6 py-3 bg-white text-black hover:bg-zinc-200 rounded-sm font-semibold transition-all hover:scale-105 uppercase tracking-wider text-sm"
          >
            Schedule Meeting
          </a>
        </div>

      </div>

      <!-- Location Card -->
      <div class="location-card bg-zinc-950 rounded-sm p-8 border border-zinc-800">
        <div class="flex flex-col md:flex-row items-center md:items-start gap-6">
          <div>
            <MapPin class="w-14 h-14 text-zinc-400" />
          </div>
          <div class="flex-1 text-center md:text-left">
            <h3 class="text-2xl font-bold mb-4 text-white">Our Location</h3>
            <p class="text-lg text-zinc-300 mb-2">Machine King Labs, LLC</p>
            <p class="text-zinc-400">Fairfax, Virginia</p>
            <p class="text-zinc-400">United States</p>
          </div>
        </div>
      </div>

      <!-- Contact Form Section (Optional) -->
      <div class="form-section mt-16">
        <h2 class="text-3xl font-bold mb-8 text-center text-white">Send Us a Message</h2>
        <form class="bg-zinc-950 rounded-sm p-8 border border-zinc-800 max-w-2xl mx-auto">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
              <label class="block text-sm font-semibold mb-2 text-white" for="name">Name</label>
              <input
                type="text"
                id="name"
                class="w-full px-4 py-3 bg-zinc-900 border border-zinc-800 rounded-sm focus:border-zinc-600 focus:outline-none transition-colors text-white"
                placeholder="Your name"
              />
            </div>
            <div>
              <label class="block text-sm font-semibold mb-2 text-white" for="email">Email</label>
              <input
                type="email"
                id="email"
                class="w-full px-4 py-3 bg-zinc-900 border border-zinc-800 rounded-sm focus:border-zinc-600 focus:outline-none transition-colors text-white"
                placeholder="your@email.com"
              />
            </div>
          </div>

          <div class="mb-6">
            <label class="block text-sm font-semibold mb-2 text-white" for="company">Company/Organization</label>
            <input
              type="text"
              id="company"
              class="w-full px-4 py-3 bg-zinc-900 border border-zinc-800 rounded-sm focus:border-zinc-600 focus:outline-none transition-colors text-white"
              placeholder="Your company"
            />
          </div>

          <div class="mb-6">
            <label class="block text-sm font-semibold mb-2 text-white" for="subject">Subject</label>
            <select
              id="subject"
              class="w-full px-4 py-3 bg-zinc-900 border border-zinc-800 rounded-sm focus:border-zinc-600 focus:outline-none transition-colors text-white"
            >
              <option>Investment Inquiry</option>
              <option>Partnership Opportunity</option>
              <option>White-Label Interest</option>
              <option>General Question</option>
            </select>
          </div>

          <div class="mb-6">
            <label class="block text-sm font-semibold mb-2 text-white" for="message">Message</label>
            <textarea
              id="message"
              rows="6"
              class="w-full px-4 py-3 bg-zinc-900 border border-zinc-800 rounded-sm focus:border-zinc-600 focus:outline-none transition-colors resize-none text-white"
              placeholder="Tell us about your inquiry..."
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full px-8 py-4 bg-white text-black hover:bg-zinc-200 rounded-sm font-semibold transition-all hover:scale-105 shadow-lg uppercase tracking-wider text-sm"
          >
            Send Message
          </button>

          <p class="text-sm text-zinc-500 mt-4 text-center">
            Form integration coming soon. For now, please email us directly.
          </p>
        </form>
      </div>
    </div>
  </section>
</Layout>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Page title animation
  gsap.from('.page-title', {
    opacity: 0,
    y: 30,
    duration: 1,
    delay: 0.2
  });

  // Contact cards stagger animation
  gsap.from('.contact-card', {
    scrollTrigger: {
      trigger: '.contact-card',
      start: 'top 80%',
      toggleActions: 'play none none reverse'
    },
    opacity: 0,
    y: 60,
    stagger: 0.15,
    duration: 0.8,
    ease: 'power3.out'
  });

  // Location card animation
  gsap.from('.location-card', {
    scrollTrigger: {
      trigger: '.location-card',
      start: 'top 80%',
      toggleActions: 'play none none reverse'
    },
    opacity: 0,
    y: 40,
    duration: 0.8
  });

  // Form section animation
  gsap.from('.form-section', {
    scrollTrigger: {
      trigger: '.form-section',
      start: 'top 80%',
      toggleActions: 'play none none reverse'
    },
    opacity: 0,
    y: 50,
    duration: 0.8
  });
</script>

<style>
  .contact-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .contact-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
  }
</style>
