<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Page title animation
  gsap.from('.page-title', {
    opacity: 0,
    y: 30,
    duration: 1,
    delay: 0.2
  });

  // Portal cards stagger animation
  gsap.from('.portal-card', {
    scrollTrigger: {
      trigger: '.portal-card',
      start: 'top 80%',
      toggleActions: 'play none none reverse'
    },
    opacity: 0,
    y: 40,
    stagger: 0.1,
    duration: 0.6,
    ease: 'power3.out'
  });

  // Project dashboard cards animation
  gsap.from('.project-dashboard-card', {
    scrollTrigger: {
      trigger: '.project-dashboard-card',
      start: 'top 80%',
      toggleActions: 'play none none reverse'
    },
    opacity: 0,
    y: 60,
    stagger: 0.15,
    duration: 0.8,
    ease: 'power3.out'
  });

  // Resource cards animation
  gsap.from('.resource-card', {
    scrollTrigger: {
      trigger: '.resource-card',
      start: 'top 80%',
      toggleActions: 'play none none reverse'
    },
    opacity: 0,
    y: 40,
    stagger: 0.1,
    duration: 0.6,
    ease: 'power3.out'
  });

  // Team cards animation
  gsap.from('.team-portal-card', {
    scrollTrigger: {
      trigger: '.team-portal-card',
      start: 'top 80%',
      toggleActions: 'play none none reverse'
    },
    opacity: 0,
    y: 40,
    stagger: 0.15,
    duration: 0.6,
    ease: 'power3.out'
  });
</script>

<style>
  .portal-card {
    display: block;
    text-align: center;
    transition: all 0.3s ease;
  }

  .portal-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.4);
  }

  .project-dashboard-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .project-dashboard-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
  }

  .resource-card {
    display: block;
    transition: all 0.3s ease;
  }

  .resource-card:hover {
    background: rgb(39, 39, 42);
  }

  .team-portal-card {
    display: block;
    text-align: center;
    transition: all 0.3s ease;
  }

  .team-portal-card:hover {
    transform: translateY(-2px);
  }
</style>
